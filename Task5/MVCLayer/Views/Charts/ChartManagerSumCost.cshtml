<html>
@{ViewBag.Title = "Chart on summ sales manager";}
<head>

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

        google.charts.load('current', { 'packages': ['corechart'] });

        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {

            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Managers');
            data.addColumn('number', 'Total Cost');
            //data.addRows([["Managers",0]
            //    ["Ivanov", 1457],
            //    [ "Sidorov", 137033 ],
            //    [ "Petrov", 1000199 ]])
            $.getJSON('@Url.Action("GetChartManagerSumCost", "Charts")',
                null,
                function (result) {

                    if (result.length) {
                        $.each(result, function (index, c) {
                            data.addRow(
                                [c.Nickname, c.SumCost]
                                );
                        //$.each(result, function (index, c) {

                        //    data.addRow(
                        //        [c.Nickname, c.SumCost]
                        //     );
                        });
                        var options = {
                            'title': 'Manager sales Diagramm',
                            'width': 400,
                            'height': 300,
                            'pieHole': 0.4,
                            'is3D': true
                        };
                        var chart = new google.visualization.PieChart(document.getElementById('chart_div'));
                        chart.draw(data, options);
                    }
                });
        }
    </script>
</head>

<body>
    <div id="table_div">
    </div>
    <div id="chart_div">
        @*Diagramm*@
    </div>
</body>
</html>