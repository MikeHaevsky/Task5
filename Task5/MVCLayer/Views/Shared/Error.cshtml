@model System.Web.Mvc.HandleErrorInfo
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Error";
}

<h1 class="text-danger">@ViewBag.Title</h1>
<h2 class="text-danger">Sorry! An error occurred while processing your request.</h2>
<h3>Details:</h3>
<h4>@ViewBag.ErrorInformation</h4>

