@model IEnumerable<MVCLayer.Models.UserModel>

@{
    ViewBag.Title = "Get accounts information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Manage")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    //@Html.HiddenFor(modelItem=>item.Id)
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @foreach (string role in item.Roles)
            {
                <p>@role</p>
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id, controller="Manage" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id, controller = "Manage" })
        </td>
    </tr>
}

</table>
